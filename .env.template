# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# API URLs
NEXT_PUBLIC_API_URL=http://localhost:5002/api

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs (based on your actual Stripe products)
# Starter Plan - For those who want to start capturing stories via WhatsApp or browser. Text only.
NEXT_PUBLIC_STRIPE_PRICE_STARTER_MONTHLY=price_your_starter_monthly_price_id
NEXT_PUBLIC_STRIPE_PRICE_STARTER_YEARLY=price_your_starter_yearly_price_id

# Comfort Plan - More space, image support, and smarter AI editing.
NEXT_PUBLIC_STRIPE_PRICE_COMFORT_MONTHLY=price_your_comfort_monthly_price_id
NEXT_PUBLIC_STRIPE_PRICE_COMFORT_YEARLY=price_your_comfort_yearly_price_id

# Deluxe Plan - Unlimited input, full AI chapters, image support, and human review.
NEXT_PUBLIC_STRIPE_PRICE_DELUXE_MONTHLY=price_your_deluxe_monthly_price_id
NEXT_PUBLIC_STRIPE_PRICE_DELUXE_YEARLY=price_your_deluxe_yearly_price_id

# Print Upgrade - Receive a printed hardcover version of your story.
NEXT_PUBLIC_STRIPE_PRICE_PRINT_UPGRADE=price_your_print_upgrade_price_id

# Email Configuration - Choose one option

# Option 1: Cloudflare Workers Email (Recommended)
CLOUDFLARE_EMAIL_WORKER_URL=https://your-email-worker.your-subdomain.workers.dev
CLOUDFLARE_WORKER_AUTH_TOKEN=your-optional-auth-token

# Option 2: Traditional SMTP (Gmail, SendGrid, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yoursite.com

# Option 3: Resend (Currently used)
RESEND_API_KEY=your_resend_api_key_here

# WhatsApp/Twilio Configuration (Optional - can be disabled)
# Set WHATSAPP_ENABLED=false to disable WhatsApp functionality entirely
WHATSAPP_ENABLED=false
NEXT_PUBLIC_WHATSAPP_ENABLED=false
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Other settings
NEXT_PUBLIC_SITE_URL=http://localhost:3000